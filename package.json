{
  "name": "@t8/webapp-build",
  "version": "0.3.1",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "webapp-build": "dist/bin/build.js",
    "webapp-dev": "dist/bin/startDev.js",
    "webapp-prod": "dist/bin/startProd.js"
  },
  "scripts": {
    "build": "npx npm-run-all clean -p compile compile-build compile-start-dev compile-start-prod",
    "clean": "node -e \"require('node:fs').rmSync('dist', { force: true, recursive: true });\"",
    "compile": "esbuild index.ts --bundle --outfile=dist/index.js --platform=node --external:esbuild --format=esm",
    "compile-build": "esbuild src/bin/build.ts --bundle --outfile=dist/bin/build.js --platform=node --external:esbuild --format=esm",
    "compile-start-dev": "esbuild src/bin/startDev.ts --bundle --outfile=dist/bin/startDev.js --platform=node --external:esbuild --format=esm",
    "compile-start-prod": "esbuild src/bin/startProd.ts --bundle --outfile=dist/bin/startProd.js --platform=node --external:esbuild --format=esm",
    "prepublishOnly": "npx npm-run-all build types",
    "preversion": "npx npm-run-all typecheck shape build types",
    "shape": "npx codeshape",
    "typecheck": "tsc --noEmit",
    "types": "tsc --emitDeclarationOnly"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8js/webapp-build.git"
  },
  "author": "axtk",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.7.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@t8/date-format": "^1.0.12",
    "esbuild": "^0.27.0"
  }
}
