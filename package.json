{
  "name": "@t8/webapp-build",
  "version": "0.3.1",
  "description": "",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "webapp-build": "./dist/bin/build.js",
    "webapp-dev": "./dist/bin/startDev.js",
    "webapp-prod": "./dist/bin/startProd.js"
  },
  "scripts": {
    "compile-build": "esbuild src/bin/build.ts --bundle --outfile=dist/bin/build.js --platform=node --external:esbuild --format=esm",
    "compile-start-dev": "esbuild src/bin/startDev.ts --bundle --outfile=dist/bin/startDev.js --platform=node --external:esbuild --format=esm",
    "compile-start-prod": "esbuild src/bin/startProd.ts --bundle --outfile=dist/bin/startProd.js --platform=node --external:esbuild --format=esm",
    "preversion": "npx npm-run-all shape -p compile-build compile-start-dev compile-start-prod",
    "shape": "npx codeshape"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8js/webapp-build.git"
  },
  "author": "axtk",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.7.2"
  },
  "dependencies": {
    "@t8/date-format": "^1.0.16",
    "esbuild": "^0.27.1"
  }
}
