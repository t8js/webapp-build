{
  "name": "@t8/webapp-build",
  "version": "0.1.17",
  "description": "",
  "main": "dist/run.js",
  "type": "module",
  "bin": {
    "webapp-build": "dist/run.js"
  },
  "scripts": {
    "build": "npx npm-run-all clean compile",
    "clean": "node -e \"require('node:fs').rmSync('dist', { force: true, recursive: true });\"",
    "compile": "esbuild src/run.ts --bundle --outdir=dist --platform=node --external:esbuild",
    "prepublishOnly": "npm run build",
    "preversion": "npx npm-run-all typecheck shape build",
    "shape": "npx codeshape",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8js/webapp-build.git"
  },
  "author": "axtk",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.7.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@t8/date-format": "^1.0.11",
    "esbuild": "^0.27.0"
  }
}
